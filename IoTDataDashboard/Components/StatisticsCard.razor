<div class="card mb-3 shadow-sm" style="border-left: 4px solid #00d9ff;">
    <div class="card-body">
        <h6 class="card-title text-muted">@Title</h6>
        <h3 class="card-text">@Value</h3>
        @if (!string.IsNullOrEmpty(Subtitle))
        {
            <p class="card-text text-muted small">@Subtitle</p>
        }
    </div>
</div>