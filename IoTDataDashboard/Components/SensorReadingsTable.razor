@using IoTDataDashboard.Models

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Device ID</th>
                <th>Temperature (Â°C)</th>
                <th>Humidity (%)</th>
                <th>Timestamp</th>
            </tr>
        </thead>
        <tbody>
            @if (Readings != null && Readings.Any())
            {
                @foreach (var reading in Readings)
                {
                    <tr>
                        <td>@reading.DeviceId</td>
                        <td>@reading.Temperature.ToString("F1")</td>
                        <td>@reading.Humidity.ToString("F1")</td>
                        <td>@FormatTimestamp(reading.Timestamp)</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4" class="text-center">No readings available</td>
                </tr>
            }
        </tbody>
    </table>
</div>

@code {
    [Parameter]
    public List<SensorReading>? Readings { get; set; }

    private string FormatTimestamp(DateTimeOffset timestamp)
    {
        var now = DateTimeOffset.Now;
        var diff = now - timestamp;

        if (diff.TotalMinutes < 1)
            return "Just now";
        if (diff.TotalMinutes < 60)
            return $"{(int)diff.TotalMinutes} minutes ago";
        if (diff.TotalHours < 24)
            return $"{(int)diff.TotalHours} hours ago";
        
        return timestamp.ToString("MMM dd, yyyy HH:mm");
    }
}